  },
  "author": "Jon Evans (glitch100@gmail.com)",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-eslint": "^5.0.0",
    "babel-jest": "10.0.2",
    "babel-loader": "^6.2.3",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "body-parser": "^1.14.1",
    "eslint": "^1.0.0",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-react": "^3.2.0",
    "enzyme": "2.2.0",
    "express": "^4.13.3",
    "gulp": "3.9.1",
    "jest-cli": "0.10.2",
    "prettyjson": "^1.1.3",
    "react-addons-test-utils": "15.4.1",
    "react": "15.4.1",
    "react-dom": "15.4.1",
    "react-redux": "5.0.1",
    "redux": "3.6.0",
    "immutable": "3.8.1",
    "sinon":"1.17.3",
    "webpack": "^1.10.5"
  },
  "dependencies": {
    "shallowequal": "0.2.2"
  },
  "jest": {
    "testPathDirs": [
